*{
	padding:0;
	margin:0;
}

body{
	height: 100%;
	font-family: Verdana ,Arial, sans-serif;
	font-size:12px;
	margin: 0;
	overflow: hidden;/*Disable scrollbars. Set to "scroll" to enable*/
	overflow-x:scroll;
	height: 100%;
	max-height: 100%; 
	color:#222;
}

.online_status, a:link{
	color:#2bb600;
}
.cached_status, a:visited{
	color:#1e7e00;
}

#search_div{
	position: absolute; 
	top: 0; 
	left: 0; 
	width: 100%; 
	height: 60px; /*Height of top frame div*/
	background-color: #DCE4E4;
	border-bottom: solid 1px #C8D5D5;
	min-width:700px;
}

#main_div{
	z-index:-1;
	position: fixed; 
	top: 60px; /*Set top value to HeightOfTopFrameDiv*/
	left: 0;
	right: 0;
	bottom: 0; /*Set bottom value to HeightOfBottomFrameDiv*/
	background: #ffffff;
	min-width:700px;
}
#main_frame{
	width:100%;
	height:100%;
	border:0;
}

#trotro_icon{
	height:55px;
	border-right: solid 1px #C8D5D5;
}

a img{
	border:0;
}

#logo{
	float:left;
}

#search_box{
	margin-top:5px;
	float:left;
}

#search_input{	
	margin-left:10px;
	height:45px;
	border:solid 1px #C8D5D5;
	font-size:24px;
	width:14em;
	float:left;
}

#search_btn{
	padding-right:90px;
	padding-top:6px;
	color:#ddd;
	font-size:12px;
	font-weight:bold;
	width:185px;
	height:45px;
	margin-left:10px;
	background-image:url(../img/search_btn.png);
	border:0;
}
	
#search_btn:hover{
	background-image:url(../img/search_btn_hover.png);
	border:0;
	cursor:pointer;
}

#right_box{
	position:absolute;
	right:0;
	top:5;
	height:55px;
	width:120px;
	color:#999;
}

#internet_signin{
	padding: 15px 10px;
	border-right:solid 1px #C8D5D5;
	color:#333;
	float:left;
}

#close_box{
	float:left;
	width:30px;
	height:30px;
	margin-left:10px;
	margin-top:12px;
	background-image:url(../img/close_btn.png);
	cursor:pointer;
}

#close_box:hover{
	background-image:url(../img/close_btn_hover.png);
}

.online_status{
	color:#2bb600;
}

.cached_status{
	color:#1e7e00;
}